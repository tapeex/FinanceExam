<Window x:Class="FinanceExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceExam"
        mc:Ignorable="d"
        Title="" 
        Background="#2A324B" 
        WindowState="Normal" 
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowsTransparency="True"
        ResizeMode="CanResize" Width="1656" Height="954"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="118"/>
            <RowDefinition Height="942"/>
        </Grid.RowDefinitions>

        <Button Style="{DynamicResource ButtonRoll}" Content="ꟷ" VerticalAlignment="Center" Height="20" Grid.Column="3" HorizontalAlignment="Left" Width="60" Click="Button_Click_Roll"/>
        <Button Style="{DynamicResource ButtonExit}" Content="X" VerticalAlignment="Center" Height="20" Grid.Column="3" HorizontalAlignment="Left"  Width="60" Click="Button_Click_Exit" Margin="60,0,0,0" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,76,0,0" Grid.Row="1" VerticalAlignment="Top" Width="345" Height="32"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Text="Счет" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="114" Foreground="White" FontSize="40" Margin="0,10,0,0" Grid.Row="1"/>
        <Border Grid.Column="1" Grid.Row="2" Background="#C7CCDB"/>
        <Border Grid.Column="2" Grid.Row="2" Background="White" Grid.ColumnSpan="2"/>

        <TabControl Grid.Column="2" Margin="0,0,1,0" Grid.ColumnSpan="2" Grid.Row="2" >
            <TabItem Header="TabItem" Margin="-1,21,-3,-23">
            </TabItem>
            <TabItem Header="TabItem" Margin="3,20,-7,-21">
            </TabItem>
        </TabControl>

    </Grid>

</Window>
